<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="buttonRow">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="buttonNumber">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background" >@color/primaryColorTransparent</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/primaryDarkColor</item>
    </style>

    <style name="buttonOperator">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background" >@color/primaryColorTransparent</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/secondaryColor</item>
    </style>

    <style name="buttonFab">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:contentDescription">@string/design</item>
        <item name="android:background">@drawable/shape</item>
        <item name="android:backgroundTint">@color/primaryColor</item>
        <item name="android:padding">8dp</item>

    </style>
</resources>